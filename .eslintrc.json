{
    "root": true,
    "extends": [
        "eslint:recommended",
        "plugin:import/errors",
        "plugin:import/warnings"
    ],
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true                                                
        }
                            
    },
    "env": {
        "browser": true,
        "node": true,
        "mocha": true
    },  
    "rules": {
        "semi": 2,
        "no-console": 1        
    }
}
